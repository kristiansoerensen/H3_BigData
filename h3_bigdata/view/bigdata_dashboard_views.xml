<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bigdata_dashboard_view_tree" model="ir.ui.view">
            <field name="name">bigdata.dashboard.view.tree</field>
            <field name="model">bigdata.dashboard</field>
            <field name="arch" type="xml">
                <tree string="Big Data Dashboard">
                    <field name="name"/>
                    <field name="mongodb_database"/>
                    <field name="mongodb_collection"/>
                </tree>
            </field>
        </record>

        <record id="bigdata_dashboard_view_form" model="ir.ui.view">
            <field name="name">bigdata.dashboard.view.form</field>
            <field name="model">bigdata.dashboard</field>
            <field name="arch" type="xml">
                <form string="Big Data dashboard">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_data_lines" type="object"
                                    class="oe_stat_button" icon="fa-cubes" >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_text">
                                        <field name="data_count"/>
                                        <span> Data</span>
                                    </span>
                                </div>
                            </button>

                            <button string="Update Dashboard"
                                    class="oe_stat_button"
                                    icon="fa-rotate-right" name="action_populate_dashboard" type="object"/>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="mongodb_connection_str" password="1"/>
                                <field name="mongodb_database"/>
                                <field name="mongodb_collection"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_bigdata_dashboard_view_tree" model="ir.actions.act_window">
            <field name="name">Big Data dashboard</field>
            <field name="res_model">bigdata.dashboard</field>
            <field name="view_mode">tree,form</field>
        </record>

     </data>
 </odoo>