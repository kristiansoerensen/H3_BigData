<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bigdata_api_settings_view_tree" model="ir.ui.view">
            <field name="name">bigdata.api.settings.view.tree</field>
            <field name="model">bigdata.api.settings</field>
            <field name="arch" type="xml">
                <tree string="Big Data API Settings">
                <field name="name"/>
                <field name="base_url"/>
                <field name="api_key"/>
                <field name="q"/>
                <field name="use_mongodb"/>
                </tree>
            </field>
        </record>

        <record id="bigdata_api_settings_view_form" model="ir.ui.view">
            <field name="name">bigdata.api.settings.view.form</field>
            <field name="model">bigdata.api.settings</field>
            <field name="arch" type="xml">
                <form string="Big Data API Settings">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="base_url"/>
                                <field name="api_key"/>
                                <field name="q"/>
                            </group>
                            <group>
                                <field name="use_mongodb"/>
                                <field name="mongodb_connection_str" password="1"/>
                                <field name="mongodb_database"/>
                                <field name="mongodb_collection"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_bigdata_api_settings_view_tree" model="ir.actions.act_window">
            <field name="name">Big Data API Settings</field>
            <field name="res_model">bigdata.api.settings</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="menu_bigdata"
            name="Big Data"
            sequence="10"/>

        <menuitem
            id="menu_bigdata_api_settings"
            name="APi Settings"
            action="action_bigdata_api_settings_view_tree"
            parent="menu_bigdata"
            sequence="10"/>

     </data>
 </odoo>